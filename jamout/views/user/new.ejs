<form action="/user/create" method="POST" id ="sign-up-form" class="form-signin">
	<fieldset>
	<h2 class="form-signin-heading">Create an account:</h2>

	<% if (flash && flash.err) { %>
		<ul class="alert alert-success">
	<% Object.keys(flash.err).forEach(function(error) { %>
		<li><%- JSON.stringify(flash.err[error]) %></li>
	<% }) %>
	</ul>
	<% } %>

	<div class="control group">
	<label for="name">Your Name:</label>
	<input type="text" class="form-control" placeholder="e.g. Jim Morrison" name="name">
	</div>

	<div class="control group">
	<label for="username">Username:</label>
	<input type="text" class="form-control" placeholder="displayed as jamout.fm/username" name="username">
	</div>

	<div class="control group">
	<label for="email">Email Address:</label>
	<input type="text" class="form-control" placeholder="e.g. jim@doors.com" name="email">
	</div>

	<div class="control group">
	<label for="password">Password:</label>
	<input type="password" class="form-control" placeholder="" name="password" id="password">
	</div>

	<div class="control group">
	<label for="confirmation">Password Confirmation:</label>
	<input type="password" class="form-control" placeholder="" name="confirmation">
	<br />
	</div>

	<input type="submit" class="btn btn-lg btn-primary btn-block" value="Create Account"/>

	<input type="hidden"  name="_csrf" value="<%= _csrf %>" />

</fieldset>
</form>
